{
  "name": "cdk-workshop",
  "version": "0.1.0",
  "bin": {
    "cdk-workshop": "bin/cdk-workshop.js"
  },
  "scripts": {
    "postinstall": "(cd packages/angular && npm i); (cd packages/lambda && npm i)",
    "build": "run-s build:cdk build:angular build:lambda",
    "build:cdk": "tsc",
    "build:angular": "cd packages/angular && npm run build",
    "build:lambda": "cd packages/lambda && npm run build",
    "watch": "tsc -w",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/node": "^8.9.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "^0.24.1",
    "@aws-cdk/aws-dynamodb": "^0.24.1",
    "@aws-cdk/aws-lambda": "^0.24.1",
    "@aws-cdk/cdk": "^0.24.1",
    "aws-cdk": "^0.24.1"
  }
}
